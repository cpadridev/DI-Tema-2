<UserControl x:Class="di.repaso.navidad._2021.Frontend.ControlUsuario.UCPedidos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:di.repaso.navidad._2021.Frontend.ControlUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <ToolBar>
                <Button x:Name="btnAddPedido" Click="btnAddPedido_Click" >
                    <mat:PackIcon Kind="EmailAdd" Foreground="DarkSeaGreen"/>
                </Button>
                <Button x:Name="btnListaPedido" >
                    <mat:PackIcon Kind="Mailbox" Foreground="DarkOliveGreen"/>
                </Button>
            </ToolBar>
        </Grid>
        <Grid x:Name="gridCentral">

        </Grid>
    </DockPanel>
</UserControl>
