<UserControl x:Class="di.repaso.navidad._2021.Frontend.ControlUsuario.UCClientes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
             xmlns:tool="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:di.repaso.navidad._2021.Frontend.ControlUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <ToolBar>
                <Button x:Name="btnAddCliente" Click="btnAddCliente_Click" >
                    <mat:PackIcon Kind="UserAdd" Foreground="Green"/>
                </Button>
                <Button x:Name="btnListaCliente" >
                    <mat:PackIcon Kind="UserMultiple" Foreground="DarkGreen"/>
                </Button>
            </ToolBar>
        </Grid>
        <Grid x:Name="gridCentral">
            
        </Grid>
    </DockPanel>
</UserControl>
